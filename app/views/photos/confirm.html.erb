<h1>確認画面</h1>

<%= form_with(model: @photo, url: photos_path, local: true) do |form| %>
  <table class="contents">
    <tbody class="content">
      <tr><td><%= form.hidden_field :content %><td></tr>
      <tr><td><p>Content：<%= @photo.content %></p></td></tr>
      <tr><td><%= image_tag(@photo.image.url) if @photo.image && @photo.image.url %></td></tr>
      <tr><td><%= form.hidden_field :image_cache %></td></tr>
    </tbody>
  </table>
  <%= form.submit "投稿する" %>
<% end %>


<%= form_with(model: @photo, url:new_photo_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <%= form.submit "戻る", name: "back" %>
<% end %>