<%= form_with(model: photo, local: true, url: choose_new_or_edit) do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="contents">
  <tbody class="content">
      <div class="field">
        <tr>
          <td><%= form.label :content %></td>
        </tr>
        <tr>
          <td><%= form.text_area :content %></td>
        </tr>
      </div>
    
      <div class="field">
        <tr>
          <td><%= form.label :image %></td>
        </tr>
        <tr>
          <td><%= image_tag(@photo.image.url) if @photo.image && @photo.image.url %></td>
        </tr>
        <tr>
          <td><%= form.file_field :image %></td>
          <td><%= form.hidden_field :image_cache %></td>
        </tr>
      </div>
    </tbody>
  </table>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
